<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bing.community.model.dao.FavoriteDao">
	<select id="selectAll"  parameterType="string" resultType="Favorite">
		SELECT * FROM favorite
		WHERE user_email = #{ssafy}
	</select>
	
	<select id="selectOne" parameterType="integer" resultType="Favorite">
		SELECT * FROM favorite
		WHERE favorite_id = #{favorite_id}
	</select>
	
	<insert id="insertFavorite" parameterType="Favorite">
		INSERT INTO favorite
		VALUES (#{favorite_id}, #{user_email}, #{location_id})		
	</insert>
	
	<update id="updateFavorite" parameterType="Favorite">
		UPDATE favorite
		SET user_email = #{user_email}, location_id = #{location_id}
	</update>
	
	<delete id="deleteFavorite" parameterType="integer">
		DELETE FROM favorite
		WHERE favorite_id = #{favorite_id}
	</delete>
</mapper>
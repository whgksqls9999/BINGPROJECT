<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bing.community.model.dao.ReplyDao">
	<!-- 모든 댓글 불러오기 -->
	<select id="selectAll" resultType="Reply">
		SELECT * FROM reply
	</select>

	<!-- 댓글 하나 조회 -->
	<select id="selectOne" resultType="Reply" parameterType="int">
		SELECT *
		FROM reply
		WHERE reply_id = #{reply_id}
	</select>

	<!-- 특정 사용자가 쓴 댓글 조회 -->
	<select id="pickUserReply" parameterType="String"
		resultType="Reply">
		SELECT * FROM reply
		WHERE writer = #{writer}
	</select>

	<!-- 댓글 등록 -->
	<insert id="insertReply" parameterType="Reply">
		INSERT INTO
		reply(board_id, writer, content, reg_date, is_modified)
		VALUES(#{board_id}, #{writer}, #{content}, CURRENT_TIMESTAMP,
		CURRENT_TIMESTAMP)
	</insert>

	<!-- 댓글 수정 -->
	<update id="updateReply" parameterType="Reply">
		UPDATE reply
		SET content =
		#{content}, is_modified = CURRENT_TIMESTAMP
		WHERE reply_id =
		#{reply_id}
	</update>

	<!-- 댓글 삭제 -->
	<delete id="deleteReply" parameterType="int">
		DELETE FROM reply
		WHERE
		reply_id = #{id}
	</delete>
</mapper>
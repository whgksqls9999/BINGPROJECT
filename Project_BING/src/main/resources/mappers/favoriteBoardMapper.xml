<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bing.community.model.dao.FavoriteBoardDao">
	<!-- 사용자 장소 찜 목록 가져오기 -->
	<select id="pickUserBoard" parameterType="String" resultType="FavoriteBoard">
		SELECT * FROM favorite_board
		WHERE user_email = #{user_email}
	</select>
	
	<!-- 장소 찜 등록하기 -->
	<insert id="insertFavoriteBoard" parameterType="FavoriteBoard">
		INSERT INTO favorite_board(favorite_boardId, board_id, user_email)
		VALUES(#{favorite_boardId},#{board_id},#{user_email})
	</insert>
	
	<!-- 장소 찜 삭제하기 -->
	<delete id="deleteFavoriteBoard" parameterType="int">
		DELETE FROM favorite_boar d
		WHERE favorite_boardId = #{favorite_boardId}
	</delete>
</mapper>